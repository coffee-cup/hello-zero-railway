{
  "name": "hello-zero",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "dev:zero-cache": "zero-cache-dev -p src/schema.ts",
    "generate": "bun run db:generate && bun run db:generate-zero",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:generate-zero": "drizzle-zero generate --format --output src/zero/zero-schema.gen.ts",
    "deploy-permissions": "bunx zero-deploy-permissions -p ./src/zero/schema.ts",
    "prepare": "bun run generate && bun run db:migrate && bun run deploy-permissions",
    "build": "tsc -b",
    "lint": "eslint .",
    "dev:db-up": "docker compose --env-file .env -f ./docker/docker-compose.yml up -d",
    "dev:db-down": "docker compose --env-file .env -f ./docker/docker-compose.yml down",
    "dev:clean": "source .env && docker volume rm -f docker_zstart_pgdata && rm -rf \"${ZERO_REPLICA_FILE}\"*"
  },
  "dependencies": {
    "@elysiajs/swagger": "^1.3.0",
    "@rocicorp/zero": "0.19.2025050203",
    "bun-plugin-tailwind": "^0.0.15",
    "drizzle-orm": "^0.43.1",
    "drizzle-zero": "^0.9.3",
    "elysia": "^1.3.1",
    "elysia-vite": "^0.2.0",
    "jose": "^5.9.6",
    "js-cookie": "^3.0.5",
    "pg": "^8.15.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sst": "3.9.33"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@hono/node-server": "^1.13.2",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^22.7.9",
    "@types/pg": "^8.15.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "bun-types": "^1.2.13",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "hono": "^4.6.6",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vercel": "^41.3.2",
    "vite": "^5.4.1"
  },
  "trustedDependencies": [
    "@rocicorp/zero-sqlite3"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "@rocicorp/zero-sqlite3"
    ]
  }
}
